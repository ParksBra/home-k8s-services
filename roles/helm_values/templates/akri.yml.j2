controller:
  enabled: true
  image:
    repository: "{{ akri_controller_image_repository }}"
    tag: "{{ akri_controller_image_tag }}"
    pullPolicy: "{{ akri_controller_image_pull_policy }}"

agent:
  enabled: true
  image:
    repository: "{{ akri_agent_image_repository }}"
    fullRepository: "{{ akri_agent_full_image_repository }}"
    tag: "{{ akri_agent_image_tag }}"
    pullPolicy: "{{ akri_agent_image_pull_policy }}"
  tolerations:
    - key: "node-role.kubernetes.io/control-plane"
      operator: "Exists"
      effect: "NoSchedule"

udev:
  configuration:
    enabled: true
    name: "{{ akri_udev_instance_name }}"
    discoveryDetails:
      groupRecursive: '{{ akri_udev_discovery_group_recursive | bool }}'
      udevRules:
{% for item in akri_udev_discovery_rules_list %}
        - {{ item }}
{% endfor %}
  discovery:
    enabled: true

kubernetesDistro: "k8s"
