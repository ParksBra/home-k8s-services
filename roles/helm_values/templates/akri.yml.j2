controller:
  enabled: true
  image:
    repository: "ghcr.io/project-akri/akri/controller"
    tag: "latest"
    pullPolicy: "Always"

agent:
  enabled: true
  image:
    repository: "ghcr.io/project-akri/akri/agent"
    fullRepository: ghcr.io/project-akri/akri/agent-full
    tag: "latest"
    pullPolicy: "Always"

udev:
  configuration:
    enabled: true
    name: "{{ akri_udev_instance_name }}"
    discoveryDetails:
      groupRecursive: '{{ akri_udev_discovery_group_recursive | bool }}'
      udevRules:
{% for item in akri_udev_discovery_rules_list %}
        - {{ item }}
{% endfor %}
  discovery:
    enabled: true

kubernetesDistro: "k8s"
